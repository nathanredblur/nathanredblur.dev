---
import { projectsData } from "@/data/projects";
import WindowBox from "./WindowBox.astro";

interface Props {
	project: (typeof projectsData)[number];
}

const { project } = Astro.props;
---

<WindowBox title={project.name}>
	<code class="font-mono text-xs md:text-sm lg:text-base">
		<div class="blink">
			<span class="mr-2 text-pink-500">const</span>
			<span class="mr-2 text-white">project</span>
			<span class="mr-2 text-pink-500">=</span>
			<span class="text-gray-400">{"{"}</span>
		</div>
		<div>
			<span class="ml-4 lg:ml-8 mr-2 text-white">name:</span>
			<span class="text-gray-400">'</span>
			<span class="text-amber-300">{project.name}</span>
			<span class="text-gray-400">',</span>
		</div>

		<div class="ml-4 lg:ml-8 mr-2">
			<span class="text-white">tools:</span>
			<span class="text-gray-400">{" ['"}</span>
			<div class="ml-4 lg:ml-8 mr-2">
				{project.tools.map((tag, i) => (
					<span>
						<span class="text-amber-300">{tag}</span>
						{project.tools.length - 1 !== i && (
							<span class="text-gray-400">{"', '"}</span>
						)}
					</span>
				))}
			</div>
			<span class="text-gray-400">{"],"}</span>
		</div>
		<div>
			<span class="ml-4 lg:ml-8 mr-2 text-white">myRole:</span>
			<span class="text-gray-400">'</span>
			<span class="text-amber-300">{project.role}</span>
			<span class="text-gray-400">',</span>
		</div>
		<div class="ml-4 lg:ml-8 mr-2">
			<span class="text-white">Description:</span>
			<div class="ml-4 lg:ml-8 mr-2">
				<span class="text-gray-400">'</span>
				<span class="text-cyan-300">{project.description}</span>
				<span class="text-gray-400">'</span>
			</div>
		</div>
		<div>
			<span class="text-gray-400">{"};"}</span>
		</div>
	</code>

	{/* Demo Link */}
	{project.demo && (
		<div class="mt-4 flex justify-end">
			<a
				href={project.demo}
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center gap-2 hover:gap-3 rounded-full bg-gradient-to-r from-pink-500 to-violet-600 px-4 md:px-8 py-3 md:py-4 text-center text-xs md:text-sm font-medium uppercase tracking-wider text-white transition-all duration-200 hover:from-violet-600 hover:to-pink-500 text-xs py-2 px-4"
			>
				View Live
				<svg
					class="w-4 h-4"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width={2}
						d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
					/>
				</svg>
			</a>
		</div>
	)}
</WindowBox>
