---
import { personalData } from "@/data/personal-data";
---

<section id="about" class="my-12 lg:my-16 relative">
  <div class="hidden lg:flex flex-col items-center absolute top-16 -right-8">
    <span class="bg-[#1a1443] w-fit text-white rotate-90 p-2 px-5 text-xl rounded-md">
      ABOUT ME
    </span>
    <span class="h-36 w-[2px] bg-[#1a1443]"></span>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
    <div class="order-2 lg:order-1">
      <p class="font-medium mb-5 text-cyan-400 text-xl uppercase">
        Who am I?
      </p>
      <div class="text-gray-200 text-sm lg:text-lg">
        {personalData.description.split("\n").map((paragraph) => (
          <p class="mb-5">
            {paragraph.trim()}
            <br />
          </p>
        ))}
      </div>
    </div>
    <div class="flex justify-center order-1 lg:order-2 items-start">
      <img
        src={personalData.profile}
        width={280}
        height={280}
        alt={personalData.name}
        class="rounded-lg transition-all duration-1000 grayscale hover:grayscale-0 hover:scale-110 cursor-pointer"
      />
    </div>
  </div>
</section>