---
import { url } from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import { personalData } from "@/data/personal-data";
---

<footer class="border-t border-[#25213b] py-8 mt-12">
  <div class="max-w-[var(--page-width)] mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Copyright -->
      <div class="flex items-center gap-2 text-gray-400 text-sm">
        <span>&copy; {new Date().getFullYear()}</span>
        <span class="text-pink-500">{personalData.name}</span>
        <span>All rights reserved.</span>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {
          personalData.social.github && (
            <a
              href={personalData.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-black dark:hover:text-white transition-colors"
              aria-label="GitHub"
            >
              <Icon name="fa6-brands:github" class="text-[1.25rem]"></Icon>
            </a>
          )
        }
        {
          personalData.social.linkedIn && (
            <a
              href={personalData.social.linkedIn}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-600 transition-colors"
              aria-label="LinkedIn"
            >
              <Icon name="fa6-brands:linkedin" class="text-[1.25rem]"></Icon>
            </a>
          )
        }
        {
          personalData.social.twitter && (
            <a
              href={personalData.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-400 transition-colors"
              aria-label="Twitter"
            >
              <Icon name="fa6-brands:twitter" class="text-[1.25rem]"></Icon>
            </a>
          )
        }
        <!-- RSS -->
        <a
          href={url('rss.xml')}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-orange-400 transition-colors"
          aria-label="RSS"
        >
          <Icon name="fa6-solid:rss" class="text-[1.25rem]"></Icon>
        </a>

        <!-- Sitemap -->
        <a
          href={url('sitemap-index.xml')}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-violet-400 transition-colors"
          aria-label="Sitemap"
        >
          <Icon name="fa6-solid:sitemap" class="text-[1.25rem]"></Icon>
        </a>
      </div>

      <!-- Made with -->
      <div class="flex items-center gap-2 text-gray-400 text-sm">
        <span>Powered by</span>
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="text-violet-400 hover:text-violet-300 transition-colors"
        >
          Astro
        </a>
        <span>&</span>
        <a
          href="https://github.com/saicaca/fuwari"
          target="_blank"
          rel="noopener noreferrer"
          class="text-violet-400 hover:text-violet-300 transition-colors"
        >
          Fuwari
        </a>
      </div>
    </div>
  </div>
</footer>
